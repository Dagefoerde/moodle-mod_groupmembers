{{!
    @template mod_groups/allgroups

    Template that renders one table per group, containing the respective group's members.

}}
{{#groups}}
<h3 id="groupmembers-group-{{id}}">{{name}}</h3>
<table class="generaltable">
    <thead>
    <tr>
        <th style="width: 50%">{{#str}}user:fullname, mod_groupmembers{{/str}}</th>
        <th>{{#str}}user:contact, mod_groupmembers{{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#members}}
    <tr>
        <td>{{{picture}}} <a href="{{{profileurl}}}">{{displayname}}</a></td>
        <td>
            <div class="btn-group">
            {{! TODO addcontact -- cf. lib/outputrenderers.php \core_renderer::render_context_header:4206 }}
            {{#messageurl}}<a href="{{{.}}}" role="button" class="btn"><span>{{#pix}}t/message,moodle,{{#str}}sendmessage, groupmembers{{/str}}{{/pix}}</span> {{#str}}sendmessage, groupmembers{{/str}}</a>{{/messageurl}}
            {{#mail}}<a href="mailto:{{.}}" role="button" class="btn">{{.}}</a>{{/mail}}
            </div>
        </td>
    </tr>
    {{/members}}
    </tbody>
</table>
{{/groups}}